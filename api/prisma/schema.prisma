generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              String          @id @default(cuid())
  email           String          @unique
  name            String
  avatarUrl       String
  googleId        String          @unique
  schedules       Schedule[]
  onboardingData  OnboardingData? // One-to-one relation
  createdAt       DateTime        @default(now())
}

model OnboardingData {
  id               String   @id @default(cuid())
  profession       String
  hobbies         String[]
  
  sleepingHours    Int
  sleepingStart    DateTime
  sleepingEnd      DateTime

  workingHours     Int
  workingStart     DateTime
  workingEnd       DateTime

  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id]) // One-to-One Relationship
}



model Schedule {
  id           String          @id @default(cuid())
  userId       String
  user         User            @relation(fields: [userId], references: [id] , onDelete: Cascade)
  originalData Task[]            // Aim to Store the AI-generated schedule
  adjustments  Adjustment[]    // Link to adjustments made by the user
  createdAt    DateTime        @default(now())
}


model Task {
  id        String   @id @default(cuid())
  name      String
  time      String   
  duration  Int
  scheduleId String
  schedule  Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
}


model Adjustment {
  id            String    @id @default(cuid())
  scheduleId    String
  schedule      Schedule  @relation(fields: [scheduleId], references: [id] , onDelete: Cascade)
  task_id       String
  change_type   ChangeType
  details       Json
  userId        String
  adjustedAt    DateTime  @default(now())
}

enum ChangeType {
  time_adjustment
  duration_adjustment
  task_added
  task_removed
}